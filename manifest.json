{
  "name": "Snippets",
  "version": "0.2.3",
  "manifest_version": 2,
  "description": "Add JavaScript snippets to your context menu",
  "homepage_url": "http://github.com/richardscarrott/snippets",
  "omnibox": { "keyword": "s" },
  "icons": {
    "16": "artwork/icon-16.png",
    "48": "artwork/icon-48.png",
    "128": "artwork/icon-128.png"
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "artwork/icon-16.png",
      "24": "artwork/icon-24.png",
      "32": "artwork/icon-32.png"
    }
  },
  "options_page": "dist/options.html",
  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "permissions": ["contextMenus", "storage", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
